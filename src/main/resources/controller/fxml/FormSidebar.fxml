<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" type="VBox" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Task Type">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <ToggleButton fx:id="todoButton" mnemonicParsing="false" onAction="#onTodoButtonAction" prefHeight="25.0" prefWidth="70.0" text="Todo" />
            <ToggleButton fx:id="deadlineButton" mnemonicParsing="false" onAction="#onDeadlineButtonAction" prefHeight="25.0" prefWidth="70.0" text="Deadline" />
            <ToggleButton fx:id="eventButton" mnemonicParsing="false" onAction="#onEventButtonAction" prefHeight="25.0" prefWidth="70.0" text="Event" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <StackPane fx:id="formPane" prefHeight="150.0" prefWidth="200.0" />
      <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonAction" text="Add">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="50.0" top="50.0" />
   </padding>
</fx:root>
